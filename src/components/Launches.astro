---
import CardLaunch from "./CardLaunch.astro";

import { getlastestLaunches } from "../services/spacex"

const launches = await getlastestLaunches();
---
<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        launches.map((launch) => 
            <CardLaunch 
                id={launch.id} 
                name={launch.name}
                image={launch.links.patch.small}
                success={launch.success}
                flightNumber={launch.flight_number}
                details={launch.details ? launch.details : "No details available"}>
            </CardLaunch>
        )
    }
</div>